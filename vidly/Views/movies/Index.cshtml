@model IEnumerable<vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Movies</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        
    </thead>
    <tbody>

        @foreach (var m in Model)
        {

            <tr><td><a href="/movies/Details/@m.Id">@m.Name </a></td>
                <td>@m.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>